<% if @user.errors.any? %>
	<% @user.errors.each do |error, message| %>
		<%= "#{error.capitalize}: #{message}" %> <br>
	<% end %>
<% end %>
<br><br>

<%= form_for @user do |f| %>

	<%= f.label :name %><br>
	<%= f.text_field :name %><br><br>

	<%= f.label :email %><br>
	<%= f.text_field :email %><br><br>

	<%= f.submit :Change %>

<% end %>
<br><BR>
<%= link_to "Change Password", edit_password_path %>
