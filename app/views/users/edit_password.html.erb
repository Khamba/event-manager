<% if @user.errors.any? %>
	<% @user.errors.each do |error, message| %>
		<%= "#{error.capitalize}: #{message}" %> <br>
	<% end %>
<% end %>
<br><br>

<%= form_for(@user, url: update_password_path, method: :put) do |f| %>

	<%= f.label :password %><br>
	<%= f.password_field :password %><br><br>

	<%= f.label :password_confirmation %><br>
	<%= f.password_field :password_confirmation %><br><br>

	<%= f.submit :Change %>

<% end %>
